<div class="row">
    <div class="col-md-12">
        <br>
        
        <h2>Courses</h2>
         
        <hr />
        {{#if data}}
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Description</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                    <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                    <td><a href="/course/delete/{{courseId}}" class="btn btn-danger">Remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
    </div>
    {{#unless data}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
    <h2>Courses <a href="/courses/add" class="btn btn-success float-right">Add a New Course</a></h2>
</div>